<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.springframework.org/schema/beans"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd"
	default-autowire="byName">

	<bean class="com.zhongan.core.common.ApplicationContextFactory" />

	<!-- 文件引入顺序不要改变,因为notify有类加载顺序的bug -->
	<bean name="beanContext" class="com.zhongan.core.common.BeanContextFactoryBean">
		<property name="configLocations">
			<list>
				<value>classpath*:biz/persistence.xml</value>
 				<value>classpath*:biz/spring-biz.xml</value>
				<value>classpath*:biz/spring-dao.xml</value>
				<value>classpath*:biz/spring-scheduler.xml</value>
				<value>classpath*:biz/spring-hsf-provider.xml</value>
				<value>classpath*:biz/spring-hsf-consumer.xml</value>
			</list>
		</property>
	</bean>
</beans>
