<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >

<sqlMap namespace="ApiGroup" >

  <typeAlias alias="apiGroupDO" type="com.zhongan.openapi.core.dal.dataobject.ApiGroupDO" />
  <typeAlias alias="apiGroupQuery" type="com.zhongan.openapi.core.dal.query.ApiGroupQuery" />

  <resultMap id="apiGroupDOResultMap" class="apiGroupDO" >
    <result property="id" column="id" />
    <result property="name" column="name" />
    <result property="memo" column="memo" />
    <result property="isDel" column="is_deleted" />
    <result property="gmtCreated" column="gmt_created" />
    <result property="gmtModified" column="gmt_modified" />
  </resultMap>

  <sql id="apiGroup_query_columns" >
    a1.id, a1.name, a1.memo, a1.is_deleted, a1.gmt_created, a1.gmt_modified
  </sql>

  <sql id="queryQueryParams" >
    <dynamic prepend="WHERE" >
      <![CDATA[  
      is_deleted = 'N'  
      ]]>
      <isParameterPresent prepend="AND">
	      <isNotNull property="id" prepend="AND" >
	        <![CDATA[  
	        id = #id#  
	        ]]>  
	      </isNotNull>
	      <isNotNull property="name" prepend="AND" >
	        <![CDATA[  
	        name = #name#  
	        ]]>  
	      </isNotNull>
	      <isNotNull property="memo" prepend="AND" >
	        <![CDATA[  
	        memo = #memo#  
	        ]]>  
	      </isNotNull>
      </isParameterPresent>
    </dynamic>
  </sql>

  <insert id="insert" parameterClass="apiGroupDO" >
    INSERT INTO api_group( id, name, memo, is_deleted, gmt_created, gmt_modified)
     VALUES ( #id#, #name#, #memo#, 'N', now(), now())
    <selectKey keyProperty="id" resultClass="java.lang.Long" >
      SELECT LAST_INSERT_ID() AS value
    </selectKey>
  </insert>

  <update id="update" parameterClass="apiGroupDO" >
    UPDATE api_group   
    <dynamic prepend="SET" >
      <isNotNull property="name" prepend="," >
        <![CDATA[  
        name = #name#  
        ]]>  
      </isNotNull>
      <isNotNull property="memo" prepend="," >
        <![CDATA[  
        memo = #memo#  
        ]]>  
      </isNotNull>
      <isNotNull property="gmtModified" prepend="," >
        <![CDATA[  
        gmt_modified = now() 
        ]]>  
      </isNotNull>
    </dynamic>
     WHERE id = #id#  
  </update>

  <select id="findByPrimaryKey" parameterClass="java.lang.Long" resultMap="apiGroupDOResultMap" >
     SELECT 
    <include refid="apiGroup_query_columns" />
    <![CDATA[  
     FROM api_group a1 WHERE id = #id#
    ]]>  
  </select>

  <delete id="deleteByPrimaryKey" parameterClass="java.lang.Long" >
    UPDATE api_group set is_deleted = 'Y', gmt_modified = now() WHERE id = #id#
  </delete>

  <select id="countByDOExample" parameterClass="apiGroupDO" resultClass="java.lang.Integer" >
    SELECT COUNT(id) AS num FROM api_group 
    <include refid="queryQueryParams" />
  </select>

  <select id="findListByDO" resultMap="apiGroupDOResultMap" parameterClass="apiGroupDO" >
     SELECT 
    <include refid="apiGroup_query_columns" />
     FROM api_group a1 
    <include refid="queryQueryParams" />
  </select>

  <select id="countByQueryExample" parameterClass="apiGroupQuery" resultClass="java.lang.Integer" >
    SELECT COUNT(id) AS num FROM api_group 
    <include refid="queryQueryParams" />
  </select>

  <select id="findListByQuery" resultMap="apiGroupDOResultMap" parameterClass="apiGroupQuery" >
     SELECT 
    <include refid="apiGroup_query_columns" />
     FROM api_group a1 
    <include refid="queryQueryParams" />
  </select>
  
   <select id="findAllApiGroup" parameterClass="java.lang.Long" resultMap="apiGroupDOResultMap" >
     SELECT 
    <include refid="apiGroup_query_columns" />
     FROM api_group a1 WHERE is_deleted = 'N'
  </select>
</sqlMap>