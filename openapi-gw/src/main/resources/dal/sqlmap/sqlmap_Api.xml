<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >

<sqlMap namespace="Api" >

  <typeAlias alias="apiDO" type="com.zhongan.openapi.core.dal.dataobject.ApiDO" />
  <typeAlias alias="apiQuery" type="com.zhongan.openapi.core.dal.query.ApiQuery" />

  <resultMap id="apiDOResultMap" class="apiDO" >
    <result property="id" column="id" />
    <result property="groupId" column="group_id" />
    <result property="serviceName" column="service_name" />
    <result property="interfaceName" column="interface_name" />
     <result property="name" column="name" />
    <result property="method" column="method" />
    <result property="version" column="version" />
    <result property="reqIsDto" column="req_is_dto" />
    <result property="respIsList" column="resp_is_list" />
    <result property="isCheckApiPrivilege" column="is_check_api_privilege" />
    <result property="isCheckChannel" column="is_check_channel" />
    <result property="isOverLotus" column="is_over_lotus" />
    <result property="isDel" column="is_deleted" />
    <result property="gmtCreated" column="gmt_created" />
    <result property="gmtModified" column="gmt_modified" />
  </resultMap>

  <sql id="api_query_columns" >
    a1.id, a1.group_id, a1.service_name, a1.interface_name,  a1.name,a1.method, a1.version, a1.req_is_dto,a1.resp_is_list, a1.is_check_api_privilege, 
      a1.is_check_channel, a1.is_over_lotus, a1.is_deleted, a1.gmt_created, a1.gmt_modified
  </sql>

  <sql id="queryQueryParams" >
    <dynamic prepend="WHERE" >
      <![CDATA[  
      is_deleted = 'N'
      ]]>      	
      <isParameterPresent prepend="AND">
	      <isNotNull property="id" prepend="AND" >
	        <![CDATA[  
	        id = #id#  
	        ]]>  
	      </isNotNull>
	      <isNotNull property="groupId" prepend="AND" >
	        <![CDATA[  
	        group_id = #groupId#  
	        ]]>  
	      </isNotNull>
	      <isNotNull property="serviceName" prepend="AND" >
	        <![CDATA[  
	        service_name = #serviceName#  
	        ]]>  
	      </isNotNull>
	      <isNotNull property="interfaceName" prepend="AND" >
	        <![CDATA[  
	        interface_name = #interfaceName#  
	        ]]>  
	      </isNotNull>
	       <isNotNull property="name" prepend="AND" >
	        <![CDATA[  
	        name = #name#  
	        ]]>  
	      </isNotNull>
	      <isNotNull property="method" prepend="AND" >
	        <![CDATA[  
	        method = #method#  
	        ]]>  
	      </isNotNull>
	      <isNotNull property="version" prepend="AND" >
	        <![CDATA[  
	        version = #version#  
	        ]]>  
	      </isNotNull>
	      <isNotNull property="isCheckApiPrivilege" prepend="AND" >
	        <![CDATA[  
	        is_check_api_privilege = #isCheckApiPrivilege#  
	        ]]>  
	      </isNotNull>
	      <isNotNull property="isCheckChannel" prepend="AND" >
	        <![CDATA[  
	        is_check_channel = #isCheckChannel#  
	        ]]>  
	      </isNotNull>
	      <isNotNull property="isOverLotus" prepend="AND" >
	        <![CDATA[  
	        is_over_lotus = #isOverLotus#  
	        ]]>  
	      </isNotNull>	      
      </isParameterPresent>
    </dynamic>
  </sql>

  <insert id="insert" parameterClass="apiDO" >
    INSERT INTO api( id, group_id, service_name, interface_name,name, method, version, req_is_dto,resp_is_list, is_check_api_privilege, 
      is_check_channel, is_over_lotus, is_deleted, gmt_created, gmt_modified)
     VALUES ( #id#, #groupId#, #serviceName#, #interfaceName#,#name#, #method#, #version#, #reqIsDto#, #respIsList#, #isCheckApiPrivilege#, 
      #isCheckChannel#, #isOverLotus#, 'N', now(), now())
    <selectKey keyProperty="id" resultClass="java.lang.Long" >
      SELECT LAST_INSERT_ID() AS value
    </selectKey>
  </insert>

  <update id="update" parameterClass="apiDO" >
    UPDATE api   
    <dynamic prepend="SET" >
      <![CDATA[  
      gmt_modified = now() 
      ]]>     
      <isNotNull property="groupId" prepend="," >
        <![CDATA[  
        group_id = #groupId#  
        ]]>  
      </isNotNull>
      <isNotNull property="serviceName" prepend="," >
        <![CDATA[  
        service_name = #serviceName#  
        ]]>  
      </isNotNull>
      <isNotNull property="interfaceName" prepend="," >
        <![CDATA[  
        interface_name = #interfaceName#  
        ]]> 
        </isNotNull> 
          <isNotNull property="name" prepend="," >
        <![CDATA[  
        name = #name#  
        ]]>  
      </isNotNull>
      <isNotNull property="method" prepend="," >
        <![CDATA[  
        method = #method#  
        ]]>  
      </isNotNull>
      <isNotNull property="version" prepend="," >
        <![CDATA[  
        version = #version#  
        ]]>  
      </isNotNull>
      <isNotNull property="isCheckApiPrivilege" prepend="," >
        <![CDATA[  
        is_check_api_privilege = #isCheckApiPrivilege#  
        ]]>  
      </isNotNull>
      <isNotNull property="isCheckChannel" prepend="," >
        <![CDATA[  
        is_check_channel = #isCheckChannel#  
        ]]>  
      </isNotNull>
      <isNotNull property="gmtModified" prepend="," >
        <![CDATA[  
        gmt_modified = now()  
        ]]>  
      </isNotNull> 
      <isNotNull property="isOverLotus" prepend="," >
        <![CDATA[  
        is_over_lotus = #isOverLotus#  
        ]]>  
      </isNotNull>
      <isNotNull property="reqIsDto" prepend="," >
        <![CDATA[  
        req_is_dto = #reqIsDto#  
        ]]>  
      </isNotNull>
      <isNotNull property="respIsList" prepend="," >
        <![CDATA[  
        resp_is_list = #respIsList#  
        ]]>  
      </isNotNull>           
    </dynamic>
     WHERE id = #id#  
  </update>

  <select id="findByPrimaryKey" parameterClass="java.lang.Long" resultMap="apiDOResultMap" >
     SELECT 
    <include refid="api_query_columns" />
    <![CDATA[  
     FROM api a1 WHERE id = #id#
    ]]>  
  </select>

  <delete id="deleteByPrimaryKey" parameterClass="java.lang.Long" >
    UPDATE api set is_deleted = 'Y', gmt_modified = now() WHERE id = #id#   
  </delete>

  <select id="countByDOExample" parameterClass="apiDO" resultClass="java.lang.Integer" >
    SELECT COUNT(id) AS num FROM api 
    <include refid="queryQueryParams" />
  </select>

  <select id="findListByDO" resultMap="apiDOResultMap" parameterClass="apiDO" >
     SELECT 
    <include refid="api_query_columns" />
     FROM api a1 
    <include refid="queryQueryParams" />
  </select>

  <select id="countByQueryExample" parameterClass="apiQuery" resultClass="java.lang.Integer" >
    SELECT COUNT(id) AS num FROM api 
    <include refid="queryQueryParams" />
  </select>

  <select id="findListByQuery" resultMap="apiDOResultMap" parameterClass="apiQuery" >
     SELECT 
    <include refid="api_query_columns" />
     FROM api a1 
    <include refid="queryQueryParams" />
  </select>
  
  
   <select id="findApiListByGroupId" parameterClass="java.lang.Long" resultMap="apiDOResultMap" >
      SELECT 
    <include refid="api_query_columns" />
     FROM api a1 WHERE is_deleted = 'N' 
     <isNotNull prepend="AND" >
        <![CDATA[  
        group_id = #groupId#  
        ]]>  
     </isNotNull>
	order by id 
  </select>
  
   
</sqlMap>