<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://www.springframework.org/schema/beans" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
	default-autowire="byName">

	<!-- api 接口服务注入 -->
	<bean id="apiService" class="com.zhongan.openapi.core.service.impl.ApiServiceImpl" />
	<bean id="developerService" class="com.zhongan.openapi.core.service.impl.DeveloperServiceImpl" />
	<bean id="apiPrivilegeService" class="com.zhongan.openapi.core.service.impl.ApiPrivilegeServiceImpl" />
	<bean id="signService" class="com.zhongan.openapi.security.service.impl.SignServiceImpl" />
	
	<bean id="apiInvokeService" class="com.zhongan.openapi.core.service.impl.ApiInvokeServiceImpl" >
		<property name="env" value="${za.openapi.gw.env}"></property>
	</bean>
	<bean id="publicKeyService" class="com.zhongan.openapi.core.service.impl.PublicKeyServiceImpl" />
	<bean id="apiAttributeService" class="com.zhongan.openapi.core.service.impl.ApiAttributeServiceImpl" />
	<bean id="apiRequestLogService" class="com.zhongan.openapi.core.service.impl.ApiRequestLogServiceImpl" />
	
	<bean id="RSARC4SignProcessor" class="com.zhongan.openapi.security.processor.RSARC4SignProcessor" />
	<bean id="RSASignProcessor" class="com.zhongan.openapi.security.processor.RSASignProcessor" />
	
	<bean id="openConfigHelper" class="com.zhongan.openapi.helper.OpenConfigHelper" >
		<property name="zaPublicKey" value="${za.openapi.gw.sign.zaPublicKey}"></property>
		<property name="zaPrivateKey" value="${za.openapi.gw.sign.zaPrivateKey}"></property>
		<property name="signProcessors">
			<map>
				<entry key="RSA" value-ref="RSASignProcessor"></entry>
				<entry key="RSARC4" value-ref="RSARC4SignProcessor"></entry>
			</map>
		</property>
	</bean>
	
	<bean id="gwDiamondConfig" class="com.zhongan.openapi.core.util.GwDiamondConfig" > 
		<property name="groupID" value="DEFAULT_GROUP" />
		<property name="dataID" value="com.zhongan.GwConfig" />
	</bean>
	
	<bean id="logHelper" class="com.zhongan.openapi.helper.LogHelper">
		<property name="map">
			<map>
				<entry key="ApiGroup5"><value>ApiGroup5</value></entry>
				<entry key="ApiGroup11"><value>ApiGroup11</value></entry>
				<entry key="ApiGroup15"><value>ApiGroup15</value></entry>
				<entry key="ApiGroup16"><value>ApiGroup16</value></entry>
				<entry key="ApiGroup27"><value>ApiGroup27</value></entry>
				<entry key="ApiGroup30"><value>ApiGroup30</value></entry>
				<entry key="ApiGroup32"><value>ApiGroup32</value></entry>
				<entry key="ApiGroup33"><value>ApiGroup33</value></entry>
				<entry key="ApiGroup36"><value>ApiGroup36</value></entry>
			</map>
		</property>
	</bean>
	
</beans>
